{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "src/*": ["client/src/*", "ssr/src/*"]
    },
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es2019",
    "lib": ["esnext", "dom", "DOM.Iterable"],
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "useDefineForClassFields": true
  },
  "typeRoots": ["./client/node_modules/@types", "./ssr/node_modules/@types"],
  "exclude": ["client/node_modules", "ssr/node_modules"]
}
