{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    },
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es2019",
    "lib": ["esnext", "dom", "DOM.Iterable"],
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "useDefineForClassFields": true
  },
  "typeRoots": ["./node_modules/@types", "./node_modules/gsap"],
  "exclude": ["node_modules", "typings"]
}
