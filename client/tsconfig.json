{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    },
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es2019",
    "lib": ["esnext", "dom", "DOM.Iterable"],
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "useDefineForClassFields": true
  },
  "exclude": ["node_modules"]
}
